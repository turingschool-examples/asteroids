<!DOCTYPE html>
<html>
  <head>
    <title>Asteroids</title>
    <%= csrf_meta_tags %>

    <link href="https://unpkg.com/basscss@8.0.2/css/basscss.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Fjalla+One|Cantarell:400,400italic,700italic,700" rel="stylesheet" type="text/css" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <div class="container">
      <nav>
        <section class="inner-nav">
          <%= image_tag "logo.png", class: "logo" %>
          <%= form_tag :most_dangerous_day, method: :get, class: "date-search" do %>
            <%= text_field_tag :start_date, "START DATE", class: "input datepicker" %>
            <%= text_field_tag :end_date, "END DATE", class: "input datepicker" %>
            <section>
              <%= submit_tag "Determine Most Dangerous Day", class: "btn btn-outline" %>
            </section>
          <% end %>
        </section>
      </nav>

      <%= yield %>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
